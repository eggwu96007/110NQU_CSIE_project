<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamWebApiClient.Views.BookDetails">
    <ContentPage.Content>
        <StackLayout Margin="40">
            

            <StackLayout>
                <Label Text="Name" />
                <Entry Text="{Binding Name}" />
            </StackLayout>

            <StackLayout>
                <Label Text="Quantity" />
                <Editor Text="{Binding Quantity}" />
            </StackLayout>

            <StackLayout>
                <Label Text="Price" />
                <Editor Text="{Binding Price}" />
            </StackLayout>

            <StackLayout>
                <Label Text="State" />
                <Editor Text="{Binding State}" />
            </StackLayout>

            <Button Text="Save"
                    Command="{Binding SaveBookCommand}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>